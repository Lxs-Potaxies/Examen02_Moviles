<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        tools:context=".ui.users.LoginActivity" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title_activity_login"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:textColorHint="#757575"/>

        <EditText
            android:id="@+id/txtContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:textColorHint="#757575"/>

        <Button
            android:id="@+id/btnAutenticar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_login"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="24dp"
            android:paddingVertical="12dp"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_registerhere"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textColor="#3F51B5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Information"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtShipVia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShipVia"
            android:inputType="none"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:clickable="false"/>

        <EditText
            android:id="@+id/txtShipName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShipName"
            android:inputType="none"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:clickable="false"/>

        <EditText
            android:id="@+id/txtShipAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShipAddress"
            android:inputType="none"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:clickable="false"/>

        <EditText
            android:id="@+id/txtShipCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShipCity"
            android:inputType="none"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:clickable="false"/>

        <EditText
            android:id="@+id/txtShipRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShipRegion"
            android:inputType="none"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:clickable="false"/>

        <EditText
            android:id="@+id/txtShipPostalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShipPostalCode"
            android:inputType="none"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:clickable="false"/>

        <EditText
            android:id="@+id/txtShipCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShipCountry"
            android:inputType="none"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:editable="false"
            android:clickable="false"/>

        <Button
            android:id="@+id/btnRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="24dp"
            android:paddingVertical="12dp"
            android:backgroundTint="#FFC107"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>
</ScrollView>
